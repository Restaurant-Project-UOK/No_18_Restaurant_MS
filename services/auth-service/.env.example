# Auth Service Environment Variables Template
# Copy to .env and fill in production values
# DO NOT commit .env to version control

# Server Configuration
SERVER_PORT=8081

# Database Configuration
# Use container/service name or RDS endpoint in production
SPRING_DATASOURCE_URL=
SPRING_DATASOURCE_USERNAME=
SPRING_DATASOURCE_PASSWORD=

# JPA Configuration (use 'validate' or 'none' in production)
JPA_DDL_AUTO=validate
JPA_SHOW_SQL=false

# JWT Configuration (MUST match gateway)
# Generate with: openssl rand -base64 64
JWT_SECRET=
JWT_ACCESS_EXPIRATION=900000
JWT_REFRESH_EXPIRATION=604800000
