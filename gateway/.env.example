# Gateway Environment Variables Template
# Copy to .env and fill in production values
# DO NOT commit .env to version control

# Server Configuration
SERVER_PORT=8080

# Service URLs (microservice endpoints)
# In production, use container/service names or load balancer URLs
AUTH_SERVICE_URL=
MENU_SERVICE_URL=
ORDER_SERVICE_URL=
ANALYTICS_SERVICE_URL=
KDS_SERVICE_URL=
CART_SERVICE_URL=
PAYMENT_SERVICE_URL=
AI_SERVICE_URL=

# CORS Configuration
CORS_ALLOWED_ORIGIN_1=
CORS_ALLOWED_ORIGIN_2=
CORS_ALLOWED_ORIGIN_3=

# JWT Configuration (MUST match auth-service)
# Generate with: openssl rand -base64 64
JWT_SECRET=

# Logging (use INFO or WARN in production)
LOG_LEVEL_GATEWAY=INFO
LOG_LEVEL_APP=INFO
